{
  "name": "truelens-backend",
  "version": "1.0.0",
  "description": "TrueLens Veritas - Multi-chain news verification system with Hedera, vlayer, and Pyth integration",
  "main": "index.js",
  "scripts": {
    "test": "npx hardhat test",
    "compile": "npx hardhat compile",
    "deploy": "npx hardhat run scripts/deploy-veritas.js",
    "deploy:hedera": "npx hardhat run scripts/deploy-veritas.js --network hedera_testnet",
    "deploy:ethereum": "npx hardhat run scripts/deploy-veritas.js --network ethereum",
    "start": "node server.js",
    "dev": "nodemon server.js",
    "init-services": "node scripts/init-services.js"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.3",
    "hardhat": "^2.17.3",
    "ethers": "^5.7.2",
    "dotenv": "^16.3.1",
    "@hashgraph/sdk": "^2.30.0",
    "openai": "^4.20.0",
    "axios": "^1.6.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "crypto": "^1.0.1"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^2.0.2",
    "hardhat-deploy": "^0.11.36",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "blockchain",
    "news-verification", 
    "hedera",
    "vlayer",
    "pyth",
    "ai-agents",
    "defi",
    "web3"
  ],
  "author": "TrueLens Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  }
} 